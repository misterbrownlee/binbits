[user]
  name = brownlee
  email = brownlee@adobe.com
[credential]
  helper = osxkeychain
[color]
  ui = true
[branch]
  autosetuprebase = never
[alias]

  a = add
  ac = !git add -A && git commit -m
  b = branch
  ba = !git branch -a
  branch-nuke = !git remote prune origin && git branch --merged | grep -v "master" | xargs git branch -D
  c = commit
  cam = !git commit --amend
  cleanup = !git branchnuke && git gc && git clean -xdf
  cm = !git commit -m
  co = checkout
  config-is = config -l
  diff = !git diff --diff-filter=ACMRTUXB
  master = !git co master
  nb = !git checkout -b
  p = push
  prune = !git remote prune origin
  rebase-master = !git fetch && git rebase origin/master
  st = status --short
  t = tag
  undo =checkout --
  unstage = !git reset HEAD
  up = !git fetch && git co master && git rebase origin/master && git remote prune origin
  upff = !git remote update -p && git merge --ff-only origin/rebase-master
[core]
	quotepath = false
	autocrlf = input
	excludesfile = /Users/brownlee/.gitignore_global
[push]
	default = simple
[merge "ours"]
	driver = true
