[user]
  name = brownlee
  email = brownlee@adobe.com
[credential]
  helper = osxkeychain
[color]
  ui = auto
[branch]
  autosetuprebase = never
[alias]

  a = add
  ac = !git add -A && git commit -m
  b = branch
  ba = !git branch -a
  branch-prune = !git remote prune origin
  brange-merge-nuke = git branch --merged | grep -v "main" | xargs git branch -D
  c = commit
  cam = !git commit --amend
  cleanup = !git branchnuke && git gc && git clean -xdf
  cm = !git commit -m
  co = checkout
  config-is = config -l
  diff = !git diff --diff-filter=ACMRTUXB
  main = !git co main
  nb = !git checkout -b
  p = push
  rebase-main = !git fetch && git rebase origin/main
  st = status --short
  t = tag
  undo =checkout --
  unstage = !git reset HEAD
  up = !git fetch && git co main && git merge --ff-only origin/main && git remote prune origin
  upbeta = !git fetch && git co beta && git merge --ff-only origin/beta && git remote prune origin
  
  upff = !git remote update -p && git merge --ff-only origin/rebase-main
[core]
	quotepath = false
	autocrlf = input
	excludesfile = /Users/brownlee/.gitignore_global
[push]
	default = simple
[merge "ours"]
	driver = true
